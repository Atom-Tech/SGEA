<Window x:Class="Apresentacao.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Apresentacao"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
		xmlns:pageTransitions="clr-namespace:WpfPageTransitions;assembly=WpfPageTransitions"
        mc:Ignorable="d"
        Title="Apresentação"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" 
        Width="1024" Height="768"
        Background="Transparent"
        WindowState="Maximized" Topmost="True" KeyDown="Window_KeyDown"  AllowsTransparency="True">
    <Grid>
        <Border BorderThickness="315,50,355,50" Height="768" Width="1024" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border.BorderBrush>
                <ImageBrush ImageSource="/Apresentacao;component/brushedframe4.jpg"/>
            </Border.BorderBrush>
            <Image Source="Slide/Mobile/Mobile.png" Stretch="Fill" Margin="-12,-59,-25,-50"/>
        </Border>
        <Button Margin="62,348,732,358" BorderThickness="0" Background="Transparent" Style="{DynamicResource ButtonStyle1}"/>
    </Grid>
</Window>
