        <Image x:Name="xamarin" Height="72" Visibility="Collapsed" VerticalAlignment="Bottom" Source="ms-appx:///Assets/Solucao/Xamarin.png" Stretch="Fill" HorizontalAlignment="Left" Width="102" Canvas.Left="633.863" Canvas.Top="531" />
